{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2017",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "bin"
  },
  "include": ["agnostic-bundler.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
